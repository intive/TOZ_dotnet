@using Microsoft.AspNetCore.Mvc.Localization
@model Toz.Dotnet.Models.News
@inject IViewLocalizer Localizer

<div class="container-fluid center">
    <form class="form-horizontal" asp-controller="News" asp-action="Add" method="POST" enctype="multipart/form-data">
        <fieldset class="pagetitle">
            <legend class="pagetitlelegend">@Localizer["PageTitle"]</legend>
            <input type="hidden" name="status" value="Released" />

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Title"]</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Title" class="form-control" id="Title">
                    <span class="glyphicon form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Text"]</label>
                <div class="col-sm-10 textareaContainer">
                    <textarea asp-for="Contents" class="form-control" id="Text" cols="20" rows="4" style="resize: vertical"></textarea>
                    <span class="glyphicon form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Contents)
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 control-label">@Localizer["Photo"]</label>
                <div class="col-sm-10 input-group">
                    <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                            @Localizer["Browse"] <input type="file" id="imgInp" asp-for="Photo" accept="image/jpeg,image/png">
                            @{
                                if (ViewData["ValidationPhotoAlert"] != null)
                                {
                                    var firstString = Convert.ToString(ViewData["ValidationPhotoAlert"]);
                                    var secondString = Convert.ToString(ViewData["SelectedPhoto"]);
                                    @Html.Label("PhotoAlert", @Localizer[firstString].Value + @Localizer[secondString].Value, new { @class = "field-validation-error" })
                                }
                            }
                        </span>
                    </span>
                    <input type="text" class="form-control" readonly>
                </div>
                @{
                    if (Model.Photo != null)
                    {
                        <img id='img-upload' src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" />
                    }
                    else
                    {
                        <img id='img-upload' />
                    }
                }
            </div>

            <input type="button" class="btn btn-warning btn-block" id="Cancel" data-dismiss="modal" value=@Localizer["Cancel"]>
            <input type="submit" class="btn btn-primary btn-block" id="Save" name="Save" value=@Localizer["Save"] onclick="$('input[name=status]').val('Unreleased');">
            <input type="submit" class="btn btn-primary btn-block" id="Publish" name="Publish" value=@Localizer["Publish"] onclick="$('input[name=status]').val('Released');">
        </fieldset>
    </form>
</div>