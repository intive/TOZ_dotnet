@using Microsoft.AspNetCore.Mvc.Localization
@using Toz.Dotnet.Models.EnumTypes
@model Toz.Dotnet.Models.Login
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["PageTitle"];

}

<div class="container-fluid center">
    <form class="form-horizontal" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="POST" enctype="application/x-www-form-urlencoded">
        <fieldset class="pagetitle">
            <legend class="pagetitlelegend">@Localizer["PageTitle"]</legend>
            <fieldset>
                <div class="form-group row">
                    <label class="col-sm-2 control-label">@Localizer["Email"]</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Email" class="form-control" id="Email">
                        <span class="glyphicon form-control-feedback"></span>
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 control-label">@Localizer["Password"]</label>
                    <div class="col-sm-10">
                        <input type="password" asp-for="Password" class="form-control" id="Password">
                        <span class="glyphicon form-control-feedback"></span>
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                @{
                    if (TempData["UnhandledError"] != null)
                    {
                        if (TempData["UnhandledError"].ToString() == "NotConnected")
                        {
                        <div class="form-group row" style="text-align: center">
                            <span class="unhandled-error-span">@Localizer[@TempData["UnhandledError"].ToString()]</span>
                        </div>
                        }
                        else
                        {
                        <div class="form-group row" style="text-align: center">
                            <span class="unhandled-error-span">@TempData["UnhandledError"]</span>
                        </div>
                        }
                    }
                }
            </fieldset>
            <input type="submit" class="btn btn-primary btn-block" id="SignIn" value=@Localizer["SignIn"]>
        </fieldset>
    </form>
</div>
